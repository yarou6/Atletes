<Window x:Class="Atletes.View.AddTraining"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atletes.View"
        mc:Ignorable="d"
            Title="Добавление Тренировок" Height="450" Width="400" ResizeMode="NoResize">

    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" >
            <Label Content="Название" FontSize="30"/>
            <TextBox Text="" MinHeight="35" MinWidth="200"/>
            <Label Content="Дата" FontSize="30" />
            <DatePicker FontSize="20"/>
            <Label Content="Длительность (Минуты)" FontSize="30"/>
            <TextBox Text="" MinHeight="35" MinWidth="200"/>
            <Label Content="Тип" FontSize="30"/>
            <ComboBox DataContext="{Binding Type}" MinHeight="35" MinWidth="200"/>
            <Label/>
            <Label/>
            <Button Content="Добавление" MinHeight="35" MinWidth="200" FontFamily="Comic Sans MS" FontSize="23" Click="AddTrainingPlz"/>
        </StackPanel>
    </Grid>
</Window>
