<Window x:Class="Atletes.View.TrainingsProsmotr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atletes.View"
        mc:Ignorable="d"
           Title="Просмотр тренировок" Height="450" Width="800" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White"/>
                <GradientStop Color="#FFA0D9E8" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

       

        <StackPanel Grid.Column="0">
            <ListView ItemsSource="{Binding Participation}" SelectedItem="{Binding SelectedTraining}" Height="410">
                <ListView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFA0D9E8" Offset="0.8"/>
                    </LinearGradientBrush>
                </ListView.Background>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding IdTrainingNavigation.Title}"/>
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding IdTrainingNavigation.Date}"/>
                        <GridViewColumn Header="Время" DisplayMemberBinding="{Binding IdTrainingNavigation.Time}"/>
                        <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding IdTrainingNavigation.IdTypeNavigation.Title}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <ListView ItemsSource="{Binding Participation}" SelectedItem="{Binding SelectedTraining}" Height="410">
                <ListView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFA0D9E8" Offset="0.8"/>
                    </LinearGradientBrush>
                </ListView.Background>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding IdTrainingNavigation.Title}"/>
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding IdTrainingNavigation.Date}"/>
                        <GridViewColumn Header="Время" DisplayMemberBinding="{Binding IdTrainingNavigation.Time}"/>
                        <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding IdTrainingNavigation.IdTypeNavigation.Title}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>


    </Grid>
</Window>
