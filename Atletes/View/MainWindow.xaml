<Window x:Class="Atletes.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atletes"
        mc:Ignorable="d"
        Title="Главная страница" Height="450" Width="800" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White"/>
                <GradientStop Color="#FFA0D9E8" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="150" Height="50" RenderTransformOrigin="0.5,0.5" Click="AddAthletePlz">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4A4A98" Offset="0.44"/>
                        <GradientStop Color="#FF645FA5"/>
                        <GradientStop Color="#FF645FA5"/>
                        <GradientStop Color="#FF494679" Offset="0.943"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-9.366"/>
                        <RotateTransform/>
                        <TranslateTransform X="-4.124"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Content>
                    <TextBlock TextWrapping="Wrap" Text="Добавление спортсменов" FontSize="11" Foreground="#FF51E81C"/>
                </Button.Content>
            </Button>
            <Label/>
            <Button Width="150" Height="50" RenderTransformOrigin="0.5,0.5" Click="AddTrainingPlz" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4A4A98" Offset="0.44"/>
                        <GradientStop Color="#FF645FA5"/>
                        <GradientStop Color="#FF645FA5"/>
                        <GradientStop Color="#FF494679" Offset="0.943"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-9.366"/>
                        <RotateTransform/>
                        <TranslateTransform X="-4.124"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Content>
                    <TextBlock TextWrapping="Wrap" Text="Добавление тренировок" FontSize="11" Foreground="#FF51E81C"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <ListView ItemsSource="{Binding Athletes}" SelectedItem="{Binding SelectedTraining}" Height="410">
                <ListView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFA0D9E8" Offset="0.8"/>
                    </LinearGradientBrush>
                </ListView.Background>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}"/>
                        <GridViewColumn Header="Дата рождения" DisplayMemberBinding="{Binding Birthday}"/>
                        <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding IdCategoryNavigation.Title}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>


    </Grid>

</Window>

